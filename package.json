  "author": "polidog",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polidog/floq.git"
  },
  "homepage": "https://github.com/polidog/floq#readme",
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^13.1.0",
    "drizzle-orm": "^0.39.1",
    "@inkjs/ui": "^2.0.0",
    "ink": "^5.1.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
