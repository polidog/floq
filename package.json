{
  "name": "floq",
  "version": "0.4.0",
  "description": "Floq - Getting Things Done Task Manager with MS-DOS style themes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "floq": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
